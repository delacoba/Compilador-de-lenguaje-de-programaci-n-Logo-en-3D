PROGRAM PRUEBA5
PARA CUADRADO(:LADO)
    REPITE 4 [ AV :LADO GD 90]
FIN 

PARA SUBIR(:PASOS)
    SL
    CA 90
    AV :PASOS
    CB 90
    BL
FIN


PARA PRISMA(:ALTURA, :ANCHURA, :COLOR)
    COLORLAPIZ :COLOR
    REPITE :ALTURA [
        CALL CUADRADO(:ANCHURA)   
        CALL SUBIR(1)
    ]
FIN



    VISTA_GABINETE
    COLORFONDO BLANCO        
    
    CB 90

    CALL PRISMA(200, 100, VERDE)
    CALL PRISMA(200, 100, AMARILLO)
    CALL PRISMA(200, 100, ROJO)

    
      
